<div role="listitem" class="carousel-item {{ loop.index0 == 0 ? 'active' }}">
    <img class="first-slide opacity-20" src="{{ asset('images/default.jpg') | imagine_filter('carousel_header') }}" alt="">
    <div class="container">
        <div class="carousel-caption text-left">
            <h1 class="text-primary">{{ new.title }}</h1>
            <div class="text-white font-italic">
                Publié le {{ period(new.createAt) }}
                Modifié le {{ period(new.updateAt) }}
            </div>
            <p class="text-justify d-lg-none">{{ new.content|striptags|truncate(250)|raw }}</p>
            <p class="text-justify d-none d-lg-block">{{ new.content|striptags|truncate(500)|raw }}</p>
            <p>
                <a class="btn btn-primary" href="{{ path('owp_news_show', {'slug': new.slug}) }}" role="button">
                    Lire la suite
                </a>
            </p>
        </div>
        {% if is_granted('edit', new) %}
        <div class="admin-quick-edit">
            <a href="{{ path('admin_owp_owpnews_news_edit', {'id': new.id}) }}" class='btn btn-outline-secondary' href=""><i class="fa fa-edit"></i></a>
            <button data-toggle="modal" data-target="#confirm-delete" data-href="{{ path('admin_owp_owpnews_news_delete', {'id': new.id}) }}" type="button" class="btn btn-outline-danger">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
        </div>
        {% endif %}
    </div>
</div>
